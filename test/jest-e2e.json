{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": ["**/*.ts"],
  "coverageDirectory": "../coverage-e2e",
  "testPathIgnorePatterns": ["/node_modules/", ".*\\.integration\\.spec\\.ts$"],
  "verbose": false
}
