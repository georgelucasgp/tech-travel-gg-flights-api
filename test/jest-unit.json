{
  "displayName": "Unit Tests",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    ".*\\.integration\\.spec\\.ts$",
    ".*\\.e2e\\.spec\\.ts$"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": ["**/*.ts"],
  "coverageDirectory": "../coverage-unit",
  "verbose": false
}
