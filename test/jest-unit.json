{
  "displayName": "Unit Tests",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    ".*\\.integration\\.spec\\.ts$",
    ".*\\.e2e\\.spec\\.ts$"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage-unit"
}
